extends _layout
block append head
	meta(description="Сотрудничество с диспетчесткой службой VSEPUTI для автоперевозчиков, агентов и владельцев отелей.")
	meta(keywords="сотрудничество с диспетческой службой")
	meta(name="robots" content="noodp")
	meta(property="og:locale" content="ru_RU")
	meta(property="og:type" content="website")
	meta(property="og:title" content="Сотрудничество")
	meta(property="og:description" content="Сотрудничество с диспетчесткой службой VSEPUTI для автоперевозчиков, агентов и владельцев отелей.")
	meta(property="og:url" content="https://vseputi.com.ua/")
	meta(property="og:site_name" content="Всепути - Купить билет на автобус онлайн, заказать автобусный билет.")
	meta(property="og:image" content="https://vseputi.com.ua/img/content/partner.jpg")
	title Сотрудничество
block content
	.main._partner-bg
		.container
			.row
				.col-sm-12.col-xs-12
					h1.main__title.no-margin Сотрудничество
	.container
		.row
			.col-sm-12.col-xs-12
				.breadcrumbs.hidden-xs
					ul.breadcrumbs__list(itemscope itemtype="https://data-vocabulary.org/Breadcrumb")
						li.breadcrumbs__item
							a.breadcrumbs__link(href="/" itemprop="url" title="Главная") Главная
						li.breadcrumbs__item
							span.breadcrumbs__link.current Сотрудничество
				h2.subtitle Приглашаем автотранспортные кампании, агентов и руководителей гостиничного бизнеса к плодотворному и взаимовыгодному сотрудничеству.
			.col-md-8.col-md-offset-2.col-xs-12
				form.form__form(action="#")
					.row
						.col-sm-6
							.form__control
								label.form__label Представьтесь:
							.form__control
								i.fa.fa-user
								input.form__input(type="text" name="name" placeholder="Кампания или ФИО" required)
						.col-sm-6
							.form__control
								label.form__label Тип сотрудничества:
							.form__control
								i.fa.fa-users
								select.form__select(name="category")
									option(value="Транспортная компания или ЧП") Транспортная компания или ЧП
									option(value="Агент") Агент
									option(value="Гостиница, отель") Гостиница, отель
									option(value="Размещение рекламы на сайте") Размещение рекламы на сайте
					.row
						.col-sm-6
							.form__control
								label.form__label Ваш телефон:
							.form__control
								i.fa.fa-phone
								input.form__input(type="tel" only-numbers required name="phone")
						.col-sm-6
							.form__control
								label.form__label Ваш email:
							.form__control
								i.fa.fa-envelope-o
								input.form__input(type="email" required name="email")
					.row
						.col-sm-12
							.form__control
								label.form__label Напишите сообщение (при желании)
							.form__control
								textarea.form__textarea(rows="2" name="message")
					.form__control
						button.form__submit.form__submit-partner.btn(type="submit") Отправить &nbsp;
							i.fa.fa-paper-plane-o 
				br
				br
				br
				br