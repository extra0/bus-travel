extends ../_layout
block append head
	- transfer = true
	- ot = "Алушта"
	- to = "Горловка"
	- city = ot +' - '+ to
	- category = "Международные рейсы"
	- pageImg = "https://vseputi.com.ua/img/content/main-pattern.jpg"
	meta(name="twitter:title" content="Купить билет на автобус #{city} от #{alushtaGorPrice}")
	include ../includes/modules/_meta
block content
	.main
		.container
			.row
				.col-sm-12.col-xs-12
					h1.main__title.no-margin Купить билет на автобус #{city} 
						span от #{alushtaGorPrice}
							i.fa.fa-rub
	.container
		.row
			.col-sm-12.col-xs-12
				include ../includes/modules/_breadcrumbs
				h2.schedule__main-title
					i.fa.fa-calendar
					| Расписание автобусов 
					span(citys) Алушта (через Насыпное, Грушевка) - Горловка (через Енакиево, Харцызск, Зугрес, Шахтерск, Матвеев Курган)
	block moskow-way
