extends ../_layout
block append head
	- ot = "Курахово"
	- to = "Донецк"
	- city = ot +' - '+ to
	- category = "Междугородние перевозки"
	- pageImg = "http://vseputi.com.ua/img/content/city-pattern/donetsk.jpg"
	include ../includes/modules/_meta
block content
	.main._donetsk-bg
		.container
			.row
				.col-sm-12.col-xs-12
					h1.main__title.no-margin Купить билет на автобус #{city} 
						span от #{kurahovoDonPrice}
						|  грн.
	.container
		.row
			.col-sm-12.col-xs-12
				include ../includes/modules/_breadcrumbs
				h2.schedule__main-title
					i.fa.fa-table
					| Расписание автобусов 
					span(citys) #{city}
	block moskow-way
		.schedule
			.container
				.schedule__section
					.row.hidden-xs
						.col-sm-4
							p.schedule__title Отправление (#{ot})
						.col-sm-4
							p.schedule__title Прибытие (#{to})
						.col-sm-2
							p.schedule__title В пути
						.col-sm-2
							p.schedule__title Стоимость билетов
					.row(place-parent)
						.col-xs-12.col-sm-4
							.row
								.col-xs-4.visible-xs
									p.schedule__title Отправление
								.col-xs-8.col-sm-12
									p.schedule__text(place-from)
										span.schedule__time 15:00 
										| Автовокзал
						.col-xs-12.col-sm-4
							.row
								.col-xs-4.visible-xs
									p.schedule__title Прибытие
								.col-xs-8.col-sm-12
									p.schedule__text(place-to)
										span.schedule__time 21:00 
										| район Южного АВ
						.col-xs-12.col-sm-2
							.row
								.col-xs-4.visible-xs
									p.schedule__title В пути
								.col-xs-8.col-sm-12
									p.schedule__text Ежедневно<br>(без пересадки на БП)<br>≈ 5 часов
						.col-xs-12.col-sm-2
							.row
								.col-xs-4.visible-xs
									p.schedule__title Стоимость
								.col-xs-8.col-sm-12
									p.schedule__price(price)
										strong #{kurahovoDonPrice}
										|  грн.
							.row
								.col-xs-12.col-sm-12.text-center
									p.schedule__text
										a.btn.schedule__btn(href="#order" fancybox) Забронировать
				br
				.text-center
					a.back__link.btn(href="/intercity/autobus-donetsk-kurahovo") <i class="fa fa-refresh fa-spin"></i> Посмотреть обратный маршрут
	include ../includes/modules/_share
	include ../includes/modules/_advantages
	include ../includes/modules/_attention
	.description
		.container
			.toggle-block__text
				h2.description__title Автобус Курахово - Донецк (пассажирские автобусные перевозки в оба конца)
				p.description__text В связи с непростой обстановкой на Донбассе, очень сложно добраться из Курахово в Донецк. Путь из одного города в другой преграждают большое количество блок постов, так называемая «буферная зона», которую очень сложно пересечь даже с наличием электронного пропуска. Наша транспортная компания «VSEPUTI» предоставляет комфортабельные пассажирские автобусные перевозки Курахово - Донецк,маршрут таких перевозок осуществляется опытными и осведомленными водителями по максимально безопасному маршруту. Купить билет на автобус Курахово - Донецк или забронировать место на определенную дату и время вы можете, заполнив форму на сайте или позвонив по номерам указанным на сайте. Покупая или бронируя билеты на автобус Курахово - Донецк у вас обязательно должен быть электронный пропуск позволяющий пересекать линию разграничения. Если у вас нет желания или возможности лично выехать из Курахово по направлению Курахово - Донецк, вы можете передать багаж нашим рейсом, цену на данную услугу вы можете узнать непосредственно у водителя автобуса, и она будет зависеть от размеров багажа.
				h2.description__title Расписание автобусов Курахово - Донецк
				p.description__text Расписание автобусов по направлению Курахово - Донецк выстроено с наиболее удобным временем отправления и прибытия маршрутов, учитывая так же нюансы пропускного времени через блок посты на линии разграничения. На данный момент наша диспетчерская служба может предоставить только два варианта маршрута по направлению Курахово - Донецк в разное время, оба этих рейса, осуществляются без пересадки на линии разграничения, то есть вы следуете по назначенному маршруту без лишних неудобств связанных с пересадками. Вам не придется переходить буферную зону пешком и уж тем более самостоятельно переносить свой багаж. Более подробную информацию о маршруте Курахово - Донецк вы можете узнать у менеджеров нашей диспетчерской службы по телефонам указанным на сайте.
			