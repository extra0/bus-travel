extends ../_layout
block append head
	meta(description="Компания VSEPUTI предоставляет ряд услуг по заказу трансферов, автобусов для мероприятий и бронированию авиабилетов.")
	meta(keywords="трансфер, заказ автобуса, бронирование авиабилетов")
	meta(name="robots" content="noodp")
	meta(property="og:locale" content="ru_RU")
	meta(property="og:type" content="website")
	meta(property="og:title" content="Услуги")
	meta(property="og:description" content="Компания VSEPUTI предоставляет ряд услуг по заказу трансферов, автобусов для мероприятий и бронированию авиабилетов.")
	meta(property="og:url" content="http://vseputi.com.ua/services/")
	meta(property="og:site_name" content="Всепути - Купить билет на автобус онлайн, заказать автобусный билет.")
	meta(property="og:image" content="http://vseputi.com.ua/img/service/service.jpg")
	title Услуги
block content
	.container
		.row
			.col-sm-12.col-xs-12
				.breadcrumbs.hidden-xs
					ul.breadcrumbs__list(itemscope itemtype="http://data-vocabulary.org/Breadcrumb")
						li.breadcrumbs__item
							a.breadcrumbs__link(href="/" itemprop="url" title="Главная") Главная
						li.breadcrumbs__item
							span.breadcrumbs__link.current Услуги
		.row
			.col-sm-12.col-xs-12
				h1.main__title.service__main-title Услуги
		.row
			.col-sm-12.col-md-4
				.service__block
					a(href="/services/bus-rent")
						.service__block-top
							.service__icon(style="background: url(../img/service/bus-rent.png) center center no-repeat;")
							img.service__img(src="/img/service/bus-rent.jpg", alt="Аренда автобуса")
						.service__block-bottom
							p.service__title Аренда автобуса
							p.service__text Аренда автобуса под Ваши нужды в более чем 100 городах Украины и РФ.
			.col-sm-12.col-md-4
				.service__block
					a(href="/services/transfer")
						.service__block-top
							.service__icon(style="background: url(../img/service/transfer.png) center center no-repeat;")
							img.service__img(src="/img/service/transfer.jpg", alt="Трансфер")
						.service__block-bottom
							p.service__title Трансфер
							p.service__text Встречи в аэропортах, вокзалах и отелях. Быстро и с комфортом.  
			.col-sm-12.col-md-4
				.service__block
					a(href="https://www.kupibilet.ru/?agent=1288&tag=dym4156" rel="nofollow" target="_blank")
						.service__block-top
							.service__icon(style="background: url(../img/service/air.png) center center no-repeat;")
							img.service__img(src="/img/service/air.jpg", alt="Бронь Авиабилетов")
						.service__block-bottom
							p.service__title Бронь авиабилетов
							p.service__text Бронирование самых дешевых авиабилетов на любые направления.
		include ../includes/modules/_share
		br
