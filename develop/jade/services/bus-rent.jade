					li.characteristics__list-item
						img.characteristics__list-item-img(src="/img/service/busrent/card-ic-3.png", alt="characteristics")
						p.characteristics__list-item-text Коробка ручная
					li.characteristics__list-item
						img.characteristics__list-item-img(src="/img/service/busrent/card-ic-4.png", alt="characteristics")
						p.characteristics__list-item-text 8 мест
					li.characteristics__list-item
						img.characteristics__list-item-img(src="/img/service/busrent/card-ic-5.png", alt="characteristics")
						p.characteristics__list-item-text Салон ткань
